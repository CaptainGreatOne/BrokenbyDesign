{
  "uid": "service-overview",
  "title": "Service Overview",
  "tags": ["prometheus", "services"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 0,
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "editable": true,
  "panels": [
    {
      "id": 1,
      "title": "Services Up",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "count(up{job=~\"web-gateway|order-api|fulfillment-worker\"} == 1)",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "none",
        "colorMode": "value",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "red"
              },
              {
                "value": 3,
                "color": "green"
              }
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Total Request Rate",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"web-gateway\"}[5m])) + sum(rate(grpc_requests_total{job=\"order-api\"}[5m]))",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "decimals": 2
        }
      }
    },
    {
      "id": 3,
      "title": "Error Rate %",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "(sum(rate(http_requests_total{job=\"web-gateway\",status_code=~\"5..\"}[5m])) + sum(rate(grpc_requests_total{job=\"order-api\",status_code=~\"5..\"}[5m]))) / (sum(rate(http_requests_total{job=\"web-gateway\"}[5m])) + sum(rate(grpc_requests_total{job=\"order-api\"}[5m]))) * 100",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              },
              {
                "value": 5,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Orders Processed",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 18,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(orders_processed_total{status=\"success\"})",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0
        }
      }
    },
    {
      "id": 5,
      "title": "Request Rate by Service",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 4
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"web-gateway\"}[5m]))",
          "legendFormat": "web-gateway",
          "refId": "A"
        },
        {
          "expr": "sum(rate(grpc_requests_total{job=\"order-api\"}[5m]))",
          "legendFormat": "order-api",
          "refId": "B"
        },
        {
          "expr": "sum(rate(orders_processed_total{job=\"fulfillment-worker\"}[5m]))",
          "legendFormat": "fulfillment-worker",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Request Rate by Status Code",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 4
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"web-gateway\"}[5m])) by (status_code)",
          "legendFormat": "HTTP {{status_code}}",
          "refId": "A"
        },
        {
          "expr": "sum(rate(grpc_requests_total{job=\"order-api\"}[5m])) by (status_code)",
          "legendFormat": "gRPC {{status_code}}",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 7,
      "title": "p95 Latency by Service",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 12
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"web-gateway\"}[5m])) by (le))",
          "legendFormat": "web-gateway p95",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(grpc_request_duration_seconds_bucket{job=\"order-api\"}[5m])) by (le))",
          "legendFormat": "order-api p95",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 8,
      "title": "p99 Latency by Service",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 12
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=\"web-gateway\"}[5m])) by (le))",
          "legendFormat": "web-gateway p99",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(grpc_request_duration_seconds_bucket{job=\"order-api\"}[5m])) by (le))",
          "legendFormat": "order-api p99",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 9,
      "title": "Error Rate by Service",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 20
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"web-gateway\",status_code=~\"5..\"}[5m]))",
          "legendFormat": "web-gateway",
          "refId": "A"
        },
        {
          "expr": "sum(rate(grpc_requests_total{job=\"order-api\",status_code=~\"5..\"}[5m]))",
          "legendFormat": "order-api",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 10,
      "title": "Fulfillment Processing",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 20
      },
      "targets": [
        {
          "expr": "sum(rate(orders_processed_total[5m])) by (status)",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        }
      }
    }
  ]
}
